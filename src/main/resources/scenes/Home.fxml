<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainLayout" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="550.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.65"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Akses">
					<items>
						<MenuItem mnemonicParsing="false" text="Masuk" />
						<MenuItem mnemonicParsing="false" text="Keluar" />
						<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem mnemonicParsing="false" onAction="#closed"
							text="Tutup" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Data Master">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#showEmployee"
							text="Karyawan" />
						<MenuItem mnemonicParsing="false" onAction="#showDepartment"
							text="Jabatan" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Kepegawaian">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#showFormAbsensi"
							text="Absensi Karyawan" />
						<Menu mnemonicParsing="false" text="Kasbon Karyawan">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#showPengajuanKasbon"
									text="Pengajuan" />
								<MenuItem mnemonicParsing="false" onAction="#showPersetujuanKasbon"
									text="Persetujuan oleh Direktur" />
								<MenuItem mnemonicParsing="false" onAction="#showPencairanDanaKasbon"
									text="Pencairan Dana" />
								<MenuItem mnemonicParsing="false" onAction="#showPembayaranKasbon"
									text="Pembayaran" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Uang Prestasi">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#showPengajuanCicilan"
									text="Pengajuan" />
								<MenuItem mnemonicParsing="false" onAction="#showPersetujuanCicilan"
									text="Persetujuan" />
							</items>
						</Menu>
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Laporan">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#showDaftarKehadiranKaryawan"
							text="Daftar Hadir Karyawan" />
						<MenuItem mnemonicParsing="false" onAction="#showDaftarKasbonKaryawan"
							text="Daftar Kasbon Karyawan" />
						<MenuItem mnemonicParsing="false"
							onAction="#showDaftarPembayaranCicilanMotor" text="Daftar Pembayaran Cicilan Motor" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
