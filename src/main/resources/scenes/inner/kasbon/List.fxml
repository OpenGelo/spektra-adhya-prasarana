<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header"
			stylesheets="@../../../stylesheet/dafault-layout.css"
			BorderPane.alignment="CENTER">
			<children>
				<Label styleClass="label-header" text="Data Peminjaman dan Pembayaran"
					textFill="WHITE">
					<font>
						<Font name="System Bold" size="25.0" />
					</font>
				</Label>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</HBox>
	</top>
	<left>
		<AnchorPane prefHeight="308.0" prefWidth="300.0"
			BorderPane.alignment="CENTER">
			<children>
				<ListView fx:id="listView" prefHeight="308.0" prefWidth="300.0"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<contextMenu>
						<ContextMenu>
							<items>
								<MenuItem mnemonicParsing="false" onAction="#doClearSelection"
									text="Clear Selection" />
								<MenuItem mnemonicParsing="false" onAction="#doRefresh"
									text="Refresh Data" />
							</items>
						</ContextMenu>
					</contextMenu>
				</ListView>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</AnchorPane>
	</left>
	<center>
		<AnchorPane prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<children>
				<TableView fx:id="tableView" layoutX="90.0" layoutY="68.0"
					prefHeight="350.0" prefWidth="380.0" AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0">
					<columns>
						<TableColumn fx:id="columnTanggal" editable="false"
							maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Tanggal" />
						<TableColumn fx:id="columnPeminjaman" editable="false"
							maxWidth="150.0" minWidth="150.0" prefWidth="150.0" sortable="false"
							text="Peminjaman" />
						<TableColumn fx:id="columnPembayaran" editable="false"
							maxWidth="150.0" minWidth="150.0" prefWidth="150.0" sortable="false"
							text="Pembayaran" />
						<TableColumn fx:id="columnSaldo" editable="false"
							maxWidth="150.0" minWidth="150.0" prefWidth="150.0" sortable="false"
							text="Saldo" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</AnchorPane>
	</center>
	<bottom>
		<ToolBar prefHeight="40.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<items>
				<Button fx:id="btnCetak" mnemonicParsing="false" prefHeight="30.0"
					prefWidth="100.0" text="Cetak" />
			</items>
		</ToolBar>
	</bottom>
</BorderPane>
